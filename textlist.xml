            <size>.4 .9</size>
            <selectorWidth>0</selectorWidth>
            <fontPath>${rootpath}/_inc/fonts/Exo2-BoldCondensed.otf</fontPath>
            <primaryColor>777777</primaryColor>
            <secondaryColor>777777</secondaryColor>
            <selectedColor>FFFFFF</selectedColor>
        </textlist>


